{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Houston",
  "version": "0.1.0",
  "identifier": "com.particularlabs.houston",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Houston",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGM0U0MURCODFGMzA4RkEKUldUNkNQT0IyMEUrbjBFN0dNdkd6Rk9CRlRvK256S04rZGxzTnkzb3BWR0FuSW4xSkpXTURTcmwK",
      "endpoints": [
        "https://github.com/particular-labs/houston/releases/latest/download/latest.json"
      ]
    }
  }
}
